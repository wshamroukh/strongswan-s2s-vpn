    right=$site1_gw_pubip
    rightsubnet=$site1_vnet_address
    type=tunnel
    keyexchange=ikev2
conn $site2_vnet_name-gw
    authby=secret
    auto=start
    left=%defaultroute
    leftid=$site3_gw_pubip
    leftsubnet=$site3_vnet_address
    right=$site2_gw_pubip
    rightsubnet=$site2_vnet_address
    type=tunnel
