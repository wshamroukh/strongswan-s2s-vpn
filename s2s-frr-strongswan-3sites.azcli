         left=$site3_gw_private_ip
         # OnPrem Gateway Public IP Address :
         leftid=$site3_gw_pubip
         # Azure VPN Gateway Public IP address :
         right=$site1_gw_pubip
         rightid=$site1_gw_pubip
         auto=start
         # unique number per IPSEC Tunnel eg. 100, 101 etc
